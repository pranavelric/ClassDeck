<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/profile_apply_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="@dimen/_4sdp"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_5sdp"
    app:rippleColor="@color/primary_color"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_16sdp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color_amoled"
android:paddingTop="@dimen/_6sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingBottom="@dimen/_6sdp"
        >


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_person_24"

            app:civ_border_color="@color/invertTextColor"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/invertTextColor"
            app:civ_shadow_radius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
            android:text="Click here to chage profile"
            android:textColor="@color/invertTextColor"
            android:textSize="8sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/profile_pic"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            android:textColor="@color/invertTextColor"
            android:textSize="12sp"

            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/user_id_label"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/invertTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_id_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_id_label"
            app:layout_constraintBottom_toBottomOf="@id/user_id_label"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            android:textColor="@color/invertTextColor"
            android:textSize="12sp"
         app:layout_constraintTop_toBottomOf="@id/user_id"
            android:id="@+id/user_name_label"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/invertTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_name_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_name_label"
            app:layout_constraintBottom_toBottomOf="@id/user_name_label"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            android:textColor="@color/invertTextColor"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/user_name_label"
            android:id="@+id/user_email_label"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/invertTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_email_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_email_label"
            app:layout_constraintBottom_toBottomOf="@id/user_email_label"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            android:textColor="@color/invertTextColor"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/user_email_label"
            android:id="@+id/user_phone_label"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/invertTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_phone_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_phone_label"
            app:layout_constraintBottom_toBottomOf="@id/user_phone_label"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role: "
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            android:textColor="@color/invertTextColor"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/user_phone_label"
            android:id="@+id/user_role_label"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
         android:paddingBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/user_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/invertTextColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_role_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_role_label"
            app:layout_constraintBottom_toBottomOf="@id/user_role_label"
            android:paddingBottom="@dimen/_10sdp"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>